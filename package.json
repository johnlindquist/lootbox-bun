{
  "name": "lootbox",
  "version": "0.0.54",
  "type": "module",
  "main": "src/lootbox-cli.ts",
  "bin": {
    "lootbox": "src/lootbox-cli.ts"
  },
  "scripts": {
    "start": "MODE=development bun run src/lootbox-cli.ts server",
    "start:prod": "bun run src/lootbox-cli.ts server",
    "dev": "MODE=development bun --watch run src/lootbox-cli.ts server",
    "fmt": "prettier --write .",
    "lint": "eslint .",
    "test": "bun test ./.lootbox/tools/shared/*.test.ts ./.lootbox/tools/*.test.ts",
    "test:coverage": "bun test --coverage ./.lootbox/tools/shared/*.test.ts ./.lootbox/tools/*.test.ts",
    "test:watch": "bun test --watch ./.lootbox/tools/shared/*.test.ts ./.lootbox/tools/*.test.ts",
    "build": "cd ui && bun run build",
    "ui:dev": "cd ui && bun run dev",
    "ui:build": "cd ui && bun run build",
    "ui:preview": "cd ui && bun run preview"
  },
  "dependencies": {
    "@hono/zod-openapi": "^0.19.6",
    "@hono/swagger-ui": "^0.5.2",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^11.8.1",
    "handlebars": "^4.7.8",
    "hono": "^4.9.9",
    "minimist": "^1.2.8",
    "ora": "^8.2.0",
    "slashes": "^3.0.12",
    "ts-morph": "^23.0.0",
    "yaml": "^2.7.1",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/minimist": "^1.2.5",
    "typescript": "^5.7.2"
  }
}
